extends layout

block content
	.main.container
		.row
			.col-md-6.col-md-offset-3
				h1.display-4.m-b-2 ĐĂNG NHẬP
				.fb-login
					a(href='/auth/facebook')
						img.logo-img(src='/themes/default/images/fb.png')
				form(method='post')
					input(type='hidden', name='action', value='login.create')
					div.form-group
						label(for='name') Name:
						input#name.form-control(type='text', placeholder='first and last' name='name')
					div.form-group
						label(for='username') Email:
						input#username.form-control(type='email', placeholder='name@email.com' name='username')
					div.form-group
						label(for='favoriteBook') Favorite Book:
						input#favoriteBook.form-control(type='text', placeholder='title of book' name='favoriteBook')
					div.form-group
						label(for='pw') Password:
						input#pw.form-control(type='password' name='password')
					div.form-group
						label(for='pw2') Confirm Password:
						input#pw2.form-control(type='password' name='confirmPassword')
					button.btn.btn-primary(type='submit') Sign up
							